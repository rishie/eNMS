{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "standard": {
      "format": "%(asctime)s %(levelname)-8s %(message)s"
    }
  },
  "handlers": {
    "console": {
      "level": "DEBUG",
      "formatter": "standard",
      "class": "logging.StreamHandler",
      "stream": "ext://sys.stdout"
    },
    "rotation": {
      "level": "DEBUG",
      "formatter": "standard",
      "filename": "logs/enms.log",
      "class": "logging.handlers.RotatingFileHandler",
      "maxBytes": 20000000,
      "backupCount": 10
    },
    "security": {
      "level": "DEBUG",
      "formatter": "standard",
      "filename": "logs/security.log",
      "class": "logging.handlers.RotatingFileHandler",
      "maxBytes": 20000000,
      "backupCount": 10
    }
  },
  "loggers": {
    "": {
      "handlers": ["console", "rotation"],
      "level": "DEBUG"
    },
    "security": {
      "handlers": ["security"],
      "level": "DEBUG",
      "change_log": true,
      "service_log": true
    }
  },
  "external_loggers": {
    "requests": "info",
    "urllib3": "info"
  }
}
